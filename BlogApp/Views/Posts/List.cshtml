@model List<Post>

<div class="row">
    <div class="col-12">
        <a href="/posts/create" class="btn btn-primary">New Post</a>
        <h2>Post List</h2>
        <table class="table tabled-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 200px;">Image</th>
                    <th>Title</th>
                    <th>Is Active</th>
                    <th style="width: 125px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var post in Model)
                {
                    <tr>
                        <td><img src="/img/@post.Image" class="img-fluid"></td>
                        <td>@post.Title</td>
                        <td>@post.IsActive</td>
                        <td>
                            <a href="/posts/edit/@post.PostId" class="btn btn-sm btn-secondary">Edit</a>
                            <a href="" class="btn btn-sm btn-secondary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
